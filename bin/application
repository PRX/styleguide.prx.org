#!/bin/bash -e

PROCESS=
CMD=

ApplicationUsage () {
  echo "usage: application [ help | COMMAND ]"
}

ApplicationParseOpts () {
  PROCESS=$1
  shift
}

ApplicationRun () {
  CMD=
  if [ "$PROCESS" = "help" ] ; then
    ApplicationUsage
    exit
  else
    CMD="nginx -g 'daemon off;'"
  fi

  $CMD
}

ApplicationParseOpts $*
ApplicationRun